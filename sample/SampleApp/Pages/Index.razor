@page "/"

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<button @onclick="@(() => count++)">Click @count</button>

@if (ready)
{
    <p>Textbox: <input @bind="someText1" /> [@someText1]</p>
    <p>Textbox with input event: <input @bind="someText2" @bind:event="oninput" /> [@someText2]</p>
    <p>Checkbox: <input type="checkbox" @bind="checkValue" /> [@checkValue]</p>
    <p>
        Select:
        <select @bind="@selectValue">
            <option>First</option>
            <option>Second</option>
            <option>Third</option>
        </select>
        [@selectValue]
    </p>
    <p>Textarea: <textarea @bind="someText3"></textarea> [@someText3]</p>
    <p>
        Radio1:
        <InputRadioGroup @bind-Value="@radioValue1">
            <InputRadio Value="@("Val1")" /> Val1
            <InputRadio Value="@("Val2")" /> Val2
            <InputRadio Value="@("Val3")" /> Val3
        </InputRadioGroup>
        [@radioValue1]
    </p>
    <p>
        Radio2:
        <InputRadioGroup @bind-Value="@radioValue2">
            <InputRadio Value="@("Val1")" /> Val1
            <InputRadio Value="@("Val2")" /> Val2
            <InputRadio Value="@("Val3")" /> Val3
        </InputRadioGroup>
        [@radioValue2]
    </p>
    <p>
        Radio3:
        <InputRadioGroup @bind-Value="@radioValue3">
            <InputRadio Value="@("Val1")" /> Val1
            <InputRadio Value="@("Val2")" /> Val2
            <InputRadio Value="@("Val3")" /> Val3
        </InputRadioGroup>
        [@radioValue3]
    </p>
}

@code {
    int count;
    bool ready;
    string someText1 = "";
    string someText2 = "";
    string someText3 = "";
    string? selectValue;
    bool checkValue;
    string? radioValue1;
    string? radioValue2;
    string? radioValue3;

    protected override async Task OnInitializedAsync()
    {
        await Task.Delay(500);
        ready = true;
    }
}
